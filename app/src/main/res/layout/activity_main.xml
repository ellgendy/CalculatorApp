<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:background="@color/black"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:background="@color/black">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="acClick"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buDivide"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="operatorClick"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="operatorClick"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:background="@color/black">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="percentClick"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:background="@color/black">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="operatorClick"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:background="@color/black">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="operatorClick"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:background="@color/black">

            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberClick"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/buEqual"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="equalClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <ImageButton
                android:id="@+id/imageBuMic"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:contentDescription="TODO"
                android:cropToPadding="false"
                android:tint="#495DCF"
                app:srcCompat="@android:drawable/ic_btn_speak_now" />

        </TableRow>
    </TableLayout>


</androidx.appcompat.widget.LinearLayoutCompat>